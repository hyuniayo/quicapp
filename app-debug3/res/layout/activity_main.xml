<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Hardware"
        android:id="@+id/btnCheckHardware"
        android:layout_gravity="right|left"
        android:layout_above="@+id/btnCheckChirpResp"
        android:layout_alignRight="@+id/txtCurrentSetting"
        android:layout_alignEnd="@+id/txtCurrentSetting"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chirp Resp"
        android:id="@+id/btnCheckChirpResp"
        android:layout_marginBottom="138dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/txtResult"
        android:layout_alignRight="@+id/txtResult"
        android:layout_alignEnd="@+id/txtResult" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network"
        android:id="@+id/chkNetwork"
        android:checked="false"
        android:layout_above="@+id/btnCheckChirpResp"
        android:layout_alignLeft="@+id/btnCheckChirpResp"
        android:layout_alignStart="@+id/btnCheckChirpResp"
        android:layout_marginBottom="127dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Current setting = "
        android:id="@+id/txtCurrentSetting"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Result:"
        android:id="@+id/txtResult"
        android:layout_below="@+id/txtCurrentSetting"
        android:layout_alignRight="@+id/btnCheckHardware"
        android:layout_alignEnd="@+id/btnCheckHardware"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chirp Sync"
        android:id="@+id/btnCheckChirpSync"
        android:layout_marginTop="65dp"
        android:layout_alignTop="@+id/btnCheckChirpResp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
